@model Job_Portal_MVC.Models.Application

@{
    ViewBag.Title = "Apply";
}

<h2>Apply</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <div class="form-group row px-3" style="font-size:medium;font-family:'Book Antiqua'">
        <label class="col-4">Resume/CV</label>

        @Html.TextBox("resume", "", new { type = "file", @class = "col form-control" }) <br />

        <input type="hidden" id="email" value="@ViewBag["UserId"]" />
        <input type="hidden" id="jobId" value="@ViewBag["JobId"]" />

    </div>
    <div class="form-group mt-5 text-center ">
        <input type="Submit" value="AddResume" class="btn btn-info" />
        <br />
        @ViewBag.Status
    </div>
</div>
}

<div>
    @Html.ActionLink("Back", "JobList", "User")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




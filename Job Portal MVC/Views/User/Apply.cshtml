@model Job_Portal_MVC.Models.Application

@{
    ViewBag.Title = "Apply";
}
@Html.Partial("user_navbar")

<h2>Apply</h2>


@using (Html.BeginForm("Apply", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="form-group row px-3" style="font-size:medium;font-family:'Book Antiqua'">
            <label class="col-4">resume</label>
            <input type="hidden" value="@ViewBag.UserId" id="email" name="email" />
            <input type="hidden" value="@ViewBag.JobId" id="jobId" name="jobId" />
            @Html.TextBox("resume", "", new { type = "file", @class = "col form-control" }) <br />



        </div>
        <div class="form-group mt-5 text-center ">
            <input type="Submit" value="Apply" class="btn btn-info" />
            <br />
            @ViewBag.Status
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back", "JobList", "User")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



